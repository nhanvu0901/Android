<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/calculation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:textAlignment="textStart"
        android:textColor="#673AB7"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Calculator"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_margin="5dp"
        android:textAlignment="textEnd"
        android:textColor="#673AB7"
        android:textSize="56dp"
        android:textStyle="bold"
        android:text="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calculation" />

    <Button
        android:id="@+id/btnCE"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#673AB7"
        android:text="CE"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result"
        app:layout_goneMarginLeft="5dp" />

    <Button
        android:id="@+id/btnC"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#673AB7"
        android:text="C"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btnCE"
        app:layout_constraintTop_toBottomOf="@+id/result"
        app:layout_goneMarginLeft="5dp" />

    <Button
        android:id="@+id/btnBS"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#673AB7"
        android:text="BS"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btnC"
        app:layout_constraintTop_toBottomOf="@+id/result"
        app:layout_goneMarginLeft="5dp" />
    <Button
        android:id="@+id/btnDash"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#673AB7"
        android:text="/"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btnBS"
        app:layout_constraintTop_toBottomOf="@+id/result"
        app:layout_goneMarginLeft="5dp"
        />
    <Button
        android:id="@+id/btn7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#673AB7"
        android:text="7"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCE"
        app:layout_goneMarginLeft="5dp"
        />
    <Button
        android:id="@+id/btn8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#673AB7"
        android:text="8"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btn7"
        app:layout_constraintTop_toBottomOf="@id/btnC"
        app:layout_goneMarginLeft="5dp"
        />
    <Button
        android:id="@+id/btn9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#673AB7"
        android:text="9"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btn8"
        app:layout_constraintTop_toBottomOf="@id/btnBS"
        app:layout_goneMarginLeft="5dp"
        />
    <Button
        android:id="@+id/btnX"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#673AB7"
        android:text="x"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btn9"
        app:layout_constraintTop_toBottomOf="@id/btnDash"
        app:layout_goneMarginLeft="5dp"
        />
    <Button
        android:id="@+id/btn4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#673AB7"
        android:text="4"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn7"
        app:layout_goneMarginLeft="5dp"
        />
    <Button
        android:id="@+id/btn5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#673AB7"
        android:text="5"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btn4"
        app:layout_constraintTop_toBottomOf="@id/btn8"
        app:layout_goneMarginLeft="5dp"
        />
    <Button
        android:id="@+id/btn6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#673AB7"
        android:text="6"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btn5"
        app:layout_constraintTop_toBottomOf="@id/btn9"
        app:layout_goneMarginLeft="5dp"
        />
    <Button
        android:id="@+id/btnNegative"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#673AB7"
        android:text="-"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btn6"
        app:layout_constraintTop_toBottomOf="@id/btnX"
        app:layout_goneMarginLeft="5dp"
        />
    <Button
        android:id="@+id/btn1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#673AB7"
        android:text="1"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        app:layout_goneMarginLeft="5dp"
        />
    <Button
        android:id="@+id/btn2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#673AB7"
        android:text="2"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btn1"
        app:layout_constraintTop_toBottomOf="@id/btn5"
        app:layout_goneMarginLeft="5dp"
        />
    <Button
        android:id="@+id/btn3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#673AB7"
        android:text="3"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btn2"
        app:layout_constraintTop_toBottomOf="@id/btn6"
        app:layout_goneMarginLeft="5dp"
        />
    <Button
        android:id="@+id/btnPlus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#673AB7"
        android:text="+"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btn3"
        app:layout_constraintTop_toBottomOf="@id/btnNegative"
        app:layout_goneMarginLeft="5dp"
        />
    <Button
        android:id="@+id/btnPlusAndNegative"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#673AB7"
        android:text="+/-"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn1"
        app:layout_goneMarginLeft="5dp"
        />
    <Button
        android:id="@+id/btn0"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#673AB7"
        android:text="0"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btnPlusAndNegative"
        app:layout_constraintTop_toBottomOf="@id/btn2"
        app:layout_goneMarginLeft="5dp"
        />
    <Button
        android:id="@+id/btnDot"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#673AB7"
        android:text="."
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btn0"
        app:layout_constraintTop_toBottomOf="@id/btn3"
        app:layout_goneMarginLeft="5dp"
        />
    <Button
        android:id="@+id/btnEqual"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:backgroundTint="#673AB7"
        android:text="="
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/btnDot"
        app:layout_constraintTop_toBottomOf="@id/btnPlus"
        app:layout_goneMarginLeft="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>